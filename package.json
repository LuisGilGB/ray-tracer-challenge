{
  "name": "ray-tracer-challenge",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "typescript/apps/*",
    "typescript/packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "^1.11.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.27.1"
}